<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
  
<mapper namespace="admin.entity.Role">
      <!-- 自动生成id策略 -->
    <insert id="add" parameterType="admin.entity.Role" useGeneratedKeys="true" keyProperty="id">  
       	insert into tb_role(tc_code, tc_name) values (#{m.tc_code}, #{m.tc_name})  
    </insert>  
	
	<delete id="del" parameterType="admin.entity.Role">
		delete from tb_role where id = #{id}
	</delete>
	
	<update id="upd" parameterType="admin.entity.Role">
		update tb_role set
		  	   tc_code = #{m.tc_code},
		  	   tc_name = #{m.tc_name}
		 where id = #{m.id}
	</update>
  	
	<resultMap type="admin.entity.Role" id="result">
		<id property="m.id" column="id"/>
		<result property="m.tc_code" column="tc_code"/>
		<result property="m.tc_name" column="tc_name"/>
	</resultMap>
  	
	<sql id="columns">
		ID, TC_CODE, TC_NAME
	</sql>
	<sql id="columns1">
		t1.ID, t1.TC_CODE, t1.TC_NAME
	</sql>
	
	<sql id="page">
		<if test="offset!=null and limit!=null"> limit #{offset,javaType=String,jdbcType=NUMERIC}, #{limit,javaType=String,jdbcType=NUMERIC} </if>
	</sql>
	
	<sql id="dynamicWhere">
		<where>
			<if test="tc_name != null and tc_name != ''"> and TC_NAME like concat('%',#{tc_name},'%') </if>
		</where>
	</sql>	
	
	<select id="getById" resultMap="result">
		select <include refid="columns"/> from tb_role where id = #{id}
	</select>
	
	<select id="get" resultType="list" resultMap="result">
		select <include refid="columns"/> from tb_role
		<include refid="dynamicWhere" /> order by 1
		<include refid="page" />
	</select>
	
	<select id="getCount" resultType="int">
		select count(1) from tb_role
		<include refid="dynamicWhere" />
	</select>
	
	<select id="getByUserId" resultType="list" resultMap="result">
		select <include refid="columns1"/> 
		  from tb_role t1
         inner join tb_user_role_mapping t2 
		    on t1.id = t2.tc_role_id 
		   and t2.tc_user_id=#{tc_user_id};
	</select>
</mapper>  
